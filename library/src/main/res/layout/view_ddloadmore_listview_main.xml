<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.peil.widget.ddmenu.DropDownTitleLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_79"
        android:layout_alignParentTop="true" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_2"
        android:layout_below="@id/layout_title"
        android:background="@color/color_c7c7c7" />

    <FrameLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_line">

        <ListView
            android:id="@+id/view_content_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:childDivider="@null"
            android:childIndicator="@null"
            android:divider="@null"
            android:groupIndicator="@null" />

    </FrameLayout>

    <com.peil.widget.ddmenu.DropDownTitleContentLayout
        android:id="@+id/layout_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_line"
        android:visibility="gone" />
</merge>

